function! ToggleRenderWhitespace()
	if &listchars == 1
        unset listchars
        unset list!
	else
        set list!
        set listchars=tab:>.,trail:*,extends:\#,nbsp:.,space:Â·,eol:$
	endif
endfunction

nmap <F4> :call ToggleRenderWhitespace()<CR>
imap <F4> :call ToggleRenderWhitespace()<CR>a
